{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "ignorePatterns": ["*.png"],
    "rules": {
        "max-len": ["error", { "code": 160 }],
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        "vue/no-v-model-argument": "off",
        "vue/comment-directive": "off"
    }
}
